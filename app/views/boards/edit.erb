<h1>Need an update for <%= @board.nickname%>?</h1>
<br>
<form method="post" action="/boards/<%=@board.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">

    <label> Board Type: </label>
    <br>
        <input type="radio" id="type" name="type" value="short">
            <label for="type">Shortboard</label>
    <br>
        <input type="radio" id="long" name="type" value="longboard">
            <label for="long">Longboard</label>
    <br>
        <input type="radio" id="fun" name="type" value="Fun">
            <label for="fun">Funboard</label>
    <br>
        <input type="radio" id="fish" name="type" value="Fish">
            <label for="fish">Fish</label>  
    <br>
        <input type="radio" id="beater" name="type" value="Beater">
            <label for="beater">Beater</label>
    <br>
        <input type="radio" id="gun" name="type" value="Gun">
        <label for="gun">Gun</label>
    <br>
    <br>
    <p><label> Nickname: <input type="text" name="nickname"></label></p>
    <p><label> Material: <input type="text" name="material"></label></p>
    <p><label> Brand: <input type="text" name="brand"></label></p>
    <p><label> Color: <input type="text" name="color"></label></p>
    <p><label> Dimentions: <input type="text" name="dimentions"></label></p>
    <p><label> Fins: <input type="text" name="fins"></label></p>
    <p><label> Finbox: <input type="text" name="finbox"></label></p>
    <p><label> Volume: <input type="integer" name="volume"></label></p>
    <p><label> Dings: <input type="integer" name="dings"></label></p>
    <p><label> Watertight? <input type="radio" id="yes" name="watertight" value="Yes">Yes<input type="radio" id="no" name="watertight" value="No surfin' today">No</label></p>
  <input type="submit">
</form>