<h1>Make an update to <%=@break.name%>?</h1>

  <form method="post" action="/breaks/<%=@break.id%>">
  <input id="hidden" type="hidden" name="_method" value="patch">
    <p><label> Location: <input type="text" name="location"></label></p>
    <p><label> Name: <input type="text" name="name"></label></p>
    <p><label> Break: <input type="text" name="break"></label></p>
    <p><label> Direction: <input type="text" name="direction"></label></p>
    <p><label> Water Level: <input type="text" name="water_level"></label></p>
  <input type="submit">
</form>